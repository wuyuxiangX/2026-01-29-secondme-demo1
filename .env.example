# Database (PostgreSQL on Zeabur)
DATABASE_URL=postgresql://user:password@host:port/database

# SecondMe OAuth 配置
# 从 SecondMe 开发者平台获取
SECONDME_CLIENT_ID=your_client_id_here
SECONDME_CLIENT_SECRET=your_client_secret_here
SECONDME_REDIRECT_URI=http://localhost:3000/api/auth/callback

# OpenRouter API 配置（用于对话总结等 AI 功能）
# 从 https://openrouter.ai 获取
OPENROUTER_API_KEY=your_openrouter_api_key_here

# 生产环境 Base URL（用于 OAuth 回调重定向）
# 在 Zeabur 等平台部署时设置，例如：https://secondme-demo1.zeabur.app
NEXT_PUBLIC_BASE_URL=
