// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  secondmeId   String   @unique
  name         String?
  avatar       String?
  accessToken  String
  refreshToken String
  tokenExpiry  DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  requests     Request[]
  // 作为对话目标的对话记录
  conversations Conversation[] @relation("TargetUser")
}

model Request {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  content     String
  budget      Float?
  deadline    DateTime?
  summary     String?   // 所有对话的总结
  status      String   @default("pending") // pending, broadcasting, completed
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  conversations Conversation[]
}

// 对话记录：发布者和某个用户的对话
model Conversation {
  id                  String   @id @default(cuid())
  requestId           String
  request             Request  @relation(fields: [requestId], references: [id], onDelete: Cascade)
  targetUserId        String   // 对话对象的用户 ID
  targetUser          User     @relation("TargetUser", fields: [targetUserId], references: [id], onDelete: Cascade)
  messages            String   // JSON 数组：[{role, content, timestamp}]
  secondmeSessionId   String?  // 资源方 SecondMe 会话 ID
  requesterSessionId  String?  // 需求方 SecondMe 会话 ID
  conclusionStatus    String?  // 'concluded' | 'max_rounds' | null
  summary             String?  // 这段对话的摘要
  status              String   @default("ongoing") // ongoing, completed
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}
